@model StoreStock.Models.tblSale
@{
    ViewBag.Title = "NewSale";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h2>New Sales</h2>

<form method="post">
    <div class="form-group">
        <label>Product Name</label>
        @Html.DropDownListFor(p => p.tblProduct.Id, (List<SelectListItem>)ViewBag.prod, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Employee</label>
        @Html.DropDownListFor(c => c.tblEmployee.Id, (List<SelectListItem>)ViewBag.emp, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Customer</label>
        @Html.DropDownListFor(c => c.tblCustomer.Id, (List<SelectListItem>)ViewBag.cust, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Price</label>
        @Html.TextBoxFor(p => p.Price, new { @class = "form-control" })
    </div>
    <button class="btn btn-success" type="submit">Sale Product</button>
</form>