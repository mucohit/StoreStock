@model StoreStock.Models.tblProduct

@{
    ViewBag.Title = "New Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>New Product</h2>

    <form method="post" >
        
        <div class="form-group">
            <label>Product Name</label>
            <input class="form-control" type="text" name="Name" />
        </div>
        <div class="form-group">
            <label>Brand</label>
            @Html.DropDownListFor(b=>b.Id,(List<SelectListItem>)ViewBag.brand , new {@class="form-control" })
        </div>
        <div class="form-group">
            <label>Stock</label>
            <input class="form-control" type="text" name="Stock" />
        </div>
        <div>
            <label>Category</label>
            @Html.DropDownListFor(c=>c.tblCategory.Id,(List<SelectListItem>)ViewBag.drop, new { @class ="form-control" })
        </div>
        <div class="form-group">
            <label>Purchase Price</label>
            <input class="form-control" type="text"  />
        </div>
        <div class="form-group">
            <label>Sales Price</label>
            <input class="form-control" type="text" name="SellPrice" />
        </div>
        
            <button class="btn btn-info" type="submit">Save</button>
            <button class="btn btn-danger" type="reset">Clear</button>
    
    </form>
