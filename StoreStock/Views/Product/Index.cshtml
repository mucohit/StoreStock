@using StoreStock.Models
@model List<tblProduct> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Produckts</h2>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <td>Product Name</td>
                <td>Brand</td>
                <td>Stock</td>
                <td>Purchase Price</td>
                <td>Selling Price</td>
                <td>Category</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Brand</td>
                    <td>@p.Stock</td>
                    <td>@p.PurchasePrice</td>
                    <td>@p.SellPrice</td>
                    <td>@p.tblCategory.Name</td>
                    <td><a href="/Product/Edit/@p.Id" class="btn btn-outline-warning" style="margin-right:5px; width:70px;">Edit</a><a class="btn btn-outline-danger" href="/Product/Delete/@p.Id">Delete</a></td>

                </tr>
                
            }
        </tbody>
    </table>
    <a href="/Product/NewProduct">New Product</a>
</div>

